{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@study-smarter/web/home/feature": ["libs/web/home/feature/src/index.ts"],
      "@study-smarter/web/shared/assets": [
        "libs/web/shared/assets/src/index.ts"
      ],
      "@study-smarter/web/shared/data-access/models": [
        "libs/web/shared/data-access/models/src/index.ts"
      ],
      "@study-smarter/web/shared/pipes/calendar-pipes": [
        "libs/web/shared/pipes/calendar-pipes/src/index.ts"
      ],
      "@study-smarter/web/shared/pipes/sort-pipes": [
        "libs/web/shared/pipes/sort-pipes/src/index.ts"
      ],
      "@study-smarter/web/shared/styles": [
        "libs/web/shared/styles/src/index.scss"
      ],
      "@study-smarter/web/shell/feature/web-shell": [
        "libs/web/shell/feature/web-shell/src/index.ts"
      ],
      "@study-smarter/web/shell/ui/day": ["libs/web/shell/ui/day/src/index.ts"],
      "@study-smarter/web/shell/ui/layout": [
        "libs/web/shell/ui/layout/src/index.ts"
      ],
      "@study-smarter/web/shell/ui/week": [
        "libs/web/shell/ui/week/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
